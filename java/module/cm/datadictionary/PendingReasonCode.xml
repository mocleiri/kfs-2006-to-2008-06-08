<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.cams.bo.PendingReasonCode">
 
        <inquiry>
            <title>Pending Reason Code Inquiry</title>
             
            <inquirySections>
                <inquirySection title="Header Text">
                    <inquiryFields>
                        <field attributeName="active" />
                        <field attributeName="reasonPendingCode" />
                        <field attributeName="reasonPendingDescription" />
                    </inquiryFields>
                </inquirySection>
            </inquirySections>  
        </inquiry>

        <lookup>
            <title>Pending Reason Code Lookup</title>

            <instructions>Look up a Pending Reason Code</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="reasonPendingCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="active" required="false" />
                <lookupField attributeName="reasonPendingCode" required="false" />
                <lookupField attributeName="reasonPendingDescription" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="active" />
                <field attributeName="reasonPendingCode" />
                <field attributeName="reasonPendingDescription" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="active" forceUppercase="true">
                <label>Active</label>
                <shortLabel>Active</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>active</summary>
                <description>active description...</description>
			</attribute>

            <attribute name="reasonPendingCode" forceUppercase="true">
                <label>Reason Pending Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>reasonPendingCode</summary>
                <description>reasonPendingCode description...</description>
			</attribute>

            <attribute name="reasonPendingDescription" forceUppercase="true">
                <label>Reason Pending Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>20</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="22" />
                </control>

                <summary>reasonPendingDescription</summary>
                <description>reasonPendingDescription description...</description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>

<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.financial.bo.MessageOfTheDay">
        <customAttributeEnabled>false</customAttributeEnabled>

        <inquiry>
            <title>Message Of The Day Inquiry</title>

            <inquiryFields>
                <field attributeName="financialSystemOriginationCode" />
                <field attributeName="financialSystemMessageOfTheDayText" />
            </inquiryFields>
        </inquiry>

        <lookup>
            <title>Message Of The Day Lookup</title>

            <menubar>
                <![CDATA[<a href="maintenance.do?methodToCall=start&businessObjectClassName=org.kuali.module.financial.bo.MessageOfTheDay">Create New</a>]]>
            </menubar>

            <instructions>Lookup a Message Of The Day</instructions>

            <defaultSort attributeName="financialSystemOriginationCode" sortAscending="true" />

            <lookupFields>
                <lookupField attributeName="financialSystemOriginationCode" />
            </lookupFields>

            <resultFields>
                <field attributeName="financialSystemOriginationCode" />
                <field attributeName="financialSystemMessageOfTheDayText" />
            </resultFields>
        </lookup>

        <titleAttribute>financialSystemOriginationCode</titleAttribute>

        <attributes>

            <attribute name="financialSystemOriginationCode" forceUppercase="true">
                <label>Financial System Origination Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern>
                    <alphaNumeric />
                </validationPattern>
                <required>true</required>

                <control>
                    <text size="2" />
                </control>

                <summary><![CDATA[&nbsp;]]></summary>
                <description>The code uniquely identifying a particular origination.</description>
            </attribute>

            <attribute name="financialSystemMessageOfTheDayText" forceUppercase="false">
                <label>Message Of The Day</label>
                <shortLabel>Message</shortLabel>

                <maxLength>2000</maxLength>
                <required>false</required>

                <control>
                    <textarea rows="5" cols="40" />
                </control>


                <summary><![CDATA[&nbsp;]]></summary>
                <description>The current system message to KFS users.</description>
            </attribute>


            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>


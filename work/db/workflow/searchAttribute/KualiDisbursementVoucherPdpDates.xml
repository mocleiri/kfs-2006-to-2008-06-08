<data xmlns="ns:workflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="ns:workflow resource:WorkflowData">
  <ruleAttributes xmlns="ns:workflow/RuleAttribute" xsi:schemaLocation="ns:workflow/RuleAttribute resource:RuleAttribute">
    <ruleAttribute>
      <name>KualiDisbursementVoucherPdpDates</name>
      <className>org.kuali.workflow.attribute.KualiXmlSearchableAttributeImpl</className>
      <label>Kuali Disbursement Voucher Document PDP Date Range</label>
      <description>Attribute to identify the Extracted, Paid, and Canceled Date Range of the Disbursement Voucher Document</description>
      <type>SearchableXmlAttribute</type>
      <searchingConfig>
        <fieldDef name="extractDate" title="kuali_dd_label(DisbursementVoucherDocument)">
          <display>
            <type>text</type>
          </display>
          <searchDefinition dataType="datetime" rangeSearch="true" />
          <fieldEvaluation>
            <xpathexpression>wf:xstreamsafe('//document/extractDate')</xpathexpression>
          </fieldEvaluation>
        </fieldDef>
        <fieldDef name="paidDate" title="kuali_dd_label(DisbursementVoucherDocument)">
          <display>
            <type>text</type>
          </display>
          <searchDefinition dataType="datetime" rangeSearch="true" />
          <fieldEvaluation>
            <xpathexpression>wf:xstreamsafe('//document/paidDate')</xpathexpression>
          </fieldEvaluation>
        </fieldDef>
        <fieldDef name="cancelDate" title="kuali_dd_label(DisbursementVoucherDocument)">
          <display>
            <type>text</type>
          </display>
          <searchDefinition dataType="datetime" rangeSearch="true" />
          <fieldEvaluation>
            <xpathexpression>wf:xstreamsafe('//document/cancelDate')</xpathexpression>
          </fieldEvaluation>
        </fieldDef>
      </searchingConfig>
    </ruleAttribute>
  </ruleAttributes>
</data>
